    {
      "id": "router",
      "title": "Router",
      "host": "192.168.189.1",
      "port": 9100,
      "enabled": true,
      "tags": ["production", "web"],
      "dashboard": {
        "cards": [
          {
            "type": "value",
            "title": "CPU",
            "icon": "fa-microchip",
            "metric": "cpu_usage",
            "precision": 1,
            "calculation": {
              "type": "cpu_info_format"
            },
            "format": "cpu_info"
          },
          {
            "type": "value",
            "title": "Memory",
            "icon": "fa-memory",
            "metric": "memory_usage",
            "precision": 1,
            "calculation": {
              "type": "memory_gb_format"
            },
            "format": "memory_gb"
          },
          {
            "type": "value",
            "title": "Disk",
            "icon": "fa-hard-drive",
            "metric": "disk_usage",
            "precision": 1,
            "calculation": {
              "type": "filesystem_gb_format",
              "filter": "mountpoint=\"/\""
            },
            "format": "disk_gb"
          },
          {
            "type": "value",
            "title": "System Load",
            "icon": "fa-chart-line",
            "metric": "system_load",
            "calculation": {
              "type": "direct",
              "metrics": ["node_load1", "node_load5", "node_load15"]
            },
            "format": "load"
          }
        ],
        "charts": [
          {
            "type": "line",
            "title": "CPU Usage Over Time",
            "metrics": [
              {
                "name": "CPU Usage",
                "calculation": {
                  "type": "cpu_percentage",
                  "metrics": ["node_cpu_seconds_total"]
                },
                "color": "#667eea",
                "fill": true
              }
            ],
            "yAxis": {
              "min": 0,
              "max": 100,
              "unit": "%"
            }
          },
          {
            "type": "line",
            "title": "Memory Usage Over Time",
            "metrics": [
              {
                "name": "Memory Usage",
                "calculation": {
                  "type": "memory_percentage"
                },
                "color": "#f5576c",
                "fill": true
              }
            ],
            "yAxis": {
              "min": 0,
              "max": 100,
              "unit": "%"
            }
          },
          {
            "type": "line",
            "title": "Network Traffic - vtnet0 (WAN)",
            "metrics": [
              {
                "name": "RX",
                "calculation": {
                  "type": "rate",
                  "metric": "node_network_receive_bytes_total",
                  "filter": "device=\"vtnet0\""
                },
                "color": "#7eb26d",
                "unit": "bits",
                "fill": false
              },
              {
                "name": "TX",
                "calculation": {
                  "type": "rate",
                  "metric": "node_network_transmit_bytes_total",
                  "filter": "device=\"vtnet0\""
                },
                "color": "#ff9830",
                "unit": "bits",
                "fill": false
              }
            ],
            "yAxis": {
              "unit": "bits",
              "dynamic": true
            }
          },
          {
            "type": "line",
            "title": "Network Traffic - vtnet1 (LAN)",
            "metrics": [
              {
                "name": "RX",
                "calculation": {
                  "type": "rate",
                  "metric": "node_network_receive_bytes_total",
                  "filter": "device=\"vtnet1\""
                },
                "color": "#7eb26d",
                "unit": "bits",
                "fill": false
              },
              {
                "name": "TX",
                "calculation": {
                  "type": "rate",
                  "metric": "node_network_transmit_bytes_total",
                  "filter": "device=\"vtnet1\""
                },
                "color": "#ff9830",
                "unit": "bits",
                "fill": false
              }
            ],
            "yAxis": {
              "unit": "bits",
              "dynamic": true
            }
          },
          {
            "type": "line",
            "title": "Network Traffic - tun_wg1 (transit01)",
