              {
                "name": "RX",
                "calculation": {
                  "type": "rate",
                  "metric": "node_network_receive_bytes_total",
                  "filter": "device=\"tun_wg1\""
                },
                "color": "#7eb26d",
                "unit": "bits",
                "fill": false
              },
              {
                "name": "TX",
                "calculation": {
                  "type": "rate",
                  "metric": "node_network_transmit_bytes_total",
                  "filter": "device=\"tun_wg1\""
                },
                "color": "#ff9830",
                "unit": "bits",
                "fill": false
              }
            ],
            "yAxis": {
              "unit": "bits",
              "dynamic": true
            }
          },
          {
            "type": "line",
            "title": "Disk I/O",
            "metrics": [
              {
                "name": "Read",
                "calculation": {
                  "type": "rate",
                  "metric": "node_devstat_bytes_total",
                  "filter": "device=\"da0\",type=\"read\""
                },
                "color": "#33b5e5",
                "fill": false
              },
              {
                "name": "Write",
                "calculation": {
                  "type": "rate",
                  "metric": "node_devstat_bytes_total",
                  "filter": "device=\"da0\",type=\"write\""
                },
                "color": "#9954bb",
                "fill": false
              }
            ],
            "yAxis": {
              "unit": "bytes",
              "dynamic": true
            }
          }
        ],
        "tables": [
          {
            "title": "System Information",
            "icon": "fa-info-circle",
            "columns": [
              { "header": "Property", "field": "property", "width": "30%" },
              { "header": "Value", "field": "value", "width": "70%" }
            ],
            "type": "system_info"
          },
          {
            "title": "Filesystem Usage",
            "icon": "fa-folder-open",
            "columns": [
              {
                "header": "Mount Point",
                "field": "mountpoint",
                "width": "30%"
              },
              {
                "header": "Device",
                "field": "device",
                "width": "25%"
              },
              {
                "header": "Size",
                "field": "size",
                "format": "bytes",
                "width": "15%"
              },
              {
                "header": "Used",
                "field": "used",
                "format": "bytes",
                "width": "15%"
              },
              {
                "header": "Usage",
                "field": "usage",
                "format": "percentage",
                "width": "15%"
              }
            ],
            "metrics": {
              "size": "node_filesystem_size_bytes",
              "avail": "node_filesystem_avail_bytes"
            },
            "filter": "fstype!~\"tmpfs|devtmpfs|overlay\""
          },
          {
            "title": "Network Interfaces",
            "icon": "fa-network-wired",
            "columns": [
              {
                "header": "Interface",
                "field": "device",
                "width": "20%"
              },
              {
                "header": "RX Bytes",
                "field": "rx_bytes",
                "format": "bytes",
                "width": "20%"
              },
              {
                "header": "TX Bytes",
                "field": "tx_bytes",
                "format": "bytes",
                "width": "20%"
              },
              {
                "header": "RX Packets",
                "field": "rx_packets",
                "format": "number",
                "width": "20%"
              },
              {
                "header": "TX Packets",
                "field": "tx_packets",
                "format": "number",
                "width": "20%"
              }
            ],
            "metrics": {
              "rx_bytes": "node_network_receive_bytes_total",
              "tx_bytes": "node_network_transmit_bytes_total",
              "rx_packets": "node_network_receive_packets_total",
              "tx_packets": "node_network_transmit_packets_total"
            },
            "filter": "device!~\"lo|veth.*\""
          }
        ]
      }
